# Twitter API Credentials
# Get your bearer token from: https://developer.twitter.com/en/portal/dashboard
TWITTER_BEARER_TOKEN=your_twitter_bearer_token_here

# NOAA API Credentials
# Get your token from: https://www.ncdc.noaa.gov/cdo-web/token
NOAA_API_TOKEN=your_noaa_api_token_here

# Storage Configuration
HDFS_NAMENODE=hdfs://localhost:9000
STORAGE_ROOT=/twitter_climate

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Storm Configuration
STORM_NIMBUS_HOST=localhost
STORM_NIMBUS_PORT=6627

# Processing Configuration
BUFFER_SIZE=1000
FLUSH_INTERVAL_SECONDS=300
MAX_DEDUP_CACHE_SIZE=10000

# API Rate Limiting
TWITTER_POLL_INTERVAL_SECONDS=30
NOAA_MAX_REQUESTS_PER_DAY=1000

# Development Mode
USE_LOCAL_FILE=false
LOCAL_SAMPLE_FILE=data/sample_tweets.json
USE_LOCAL_STORAGE=false
LOCAL_STORAGE_PATH=/tmp/twitter_climate
